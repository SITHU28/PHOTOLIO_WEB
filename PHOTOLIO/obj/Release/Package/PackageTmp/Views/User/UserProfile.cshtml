@model PHOTOLIO.ViewModel.UserVM
@{
    ViewBag.Title = "UserProfile";
}
@{
    var currentUser = (PHOTOLIO.ViewModel.UserVM)Session["CurrentUser"];
}

<!-- Page Container -->
<section class="editsection" id="frmUser">
    <div class="ST-content " style="max-width:1300px; margin-top:55px;margin-bottom:50px;">
        <input type="hidden" id="hidId" value="@Model.Id" />


        <!-- The Grid -->
        <div class="ST-row-padding">

            <!-- Left Column -->

            <div class="ST-third">

                <div class="ST-white ST-text-grey ST-card-4">
                    <div class="ST-display-container">
                        <center>
                            <img src="/UserProfiles/@(Model.Profile)" style="width:100%; height:300px;padding:2px; min-height:300px;" alt="Profile" onclick="onClick(this)">
                        </center>
                        <div class="ST-display-bottomleft ST-container ST-text-black ST-galleryfont ST-opacity-min" style="width:100%">
                            <h2>@Model.Name</h2>
                        </div>
                    </div>
                    <div class="ST-container" style="margin-top:10px;">
                        @*<p><i class="fa fa-user fa-fw ST-margin-right ST-large ST-text-blue"></i>@Model.UserBio</p>*@
                        <p><i class="fa fa-home fa-fw ST-margin-right ST-large ST-text-blue"></i>@Model.FullAddress</p>
                        <p><i class="fa fa-envelope fa-fw ST-margin-right ST-large ST-text-blue"></i>@Model.Email</p>
                        <p><i class="fa fa-phone fa-fw ST-margin-right ST-large ST-text-blue"></i>@Model.PhoneNo</p>
                        <hr>
                        <p class="ST-large"><b><i class="fa fa-asterisk fa-fw ST-margin-right ST-text-blue"></i>Skills</b></p>
                        <p>Adobe Photoshop</p>
                        <div class="ST-light-grey ST-round-xlarge ST-small">
                            <div class="ST-container ST-center ST-round-xlarge ST-blue" style="width:@Model.Photoshop%">@Model.Photoshop%</div>
                        </div>
                        <p>Photography</p>
                        <div class="ST-light-grey ST-round-xlarge ST-small">
                            <div class="ST-container ST-center ST-round-xlarge ST-blue" style="width:@Model.Photography%">@Model.Photography%</div>
                        </div>
                        <p>Illustrator</p>
                        <div class="ST-light-grey ST-round-xlarge ST-small">
                            <div class="ST-container ST-center ST-round-xlarge ST-blue" style="width:@Model.Illustrator%">@Model.Illustrator%</div>
                        </div>
                        <p>Media</p>
                        <div class="ST-light-grey ST-round-xlarge ST-small">
                            <div class="ST-container ST-center ST-round-xlarge ST-blue" style="width:@Model.Media%">@Model.Media%</div>
                        </div>
                        <p>Adobe PremierePro CC </p>
                        <div class="ST-light-grey ST-round-xlarge ST-small">
                            <div class="ST-container ST-center ST-round-xlarge ST-blue" style="width:@Model.PremierePro%">@Model.PremierePro%</div>
                        </div>
                        <p>Adobe Lightroom CC </p>
                        <div class="ST-light-grey ST-round-xlarge ST-small">
                            <div class="ST-container ST-center ST-round-xlarge ST-blue" style="width:@Model.Lightroom%">@Model.Lightroom%</div>
                        </div>
                        <br>

                        <p class="ST-large ST-text-theme"><b><i class="fa fa-globe fa-fw ST-margin-right ST-text-blue"></i>Languages</b></p>
                        <p>Burmese</p>
                        <div class="ST-light-grey ST-round-xlarge">
                            <div class="ST-container ST-center ST-round-xlarge ST-blue" style="height:24px;width:@Model.Burmese%">@Model.Burmese%</div>
                        </div>
                        <p>English</p>
                        <div class="ST-light-grey ST-round-xlarge">
                            <div class="ST-container ST-center ST-round-xlarge ST-blue" style="height:24px;width:@Model.English%">@Model.English%</div>
                        </div>
                        <p>Chinese</p>
                        <div class="ST-light-grey ST-round-xlarge">
                            <div class="ST-container ST-center ST-round-xlarge ST-blue" style="height:24px;width:@Model.Chinese%">@Model.Chinese%</div>

                        </div>
                        <br>

                    </div>
                </div><br>
            </div>
            <!-- End Left Column -->
            <!-- Right Column -->
            <div class="ST-twothird">
                <div class="ST-container ST-card ST-white ST-margin-bottom">
                    <h2 class=" ST-padding-16"><i class="fa fa-user fa-fw ST-margin-right ST-xxlarge ST-text-blue"></i><b>My Bio</b></h2>
                    <p>@Model.UserBio</p>
                </div>


                <!------Portfolio Side-->
                <div class="ST-container ST-card ST-white ">
                    <!-- Header -->
                    <header id="portfolio">
                        <div class="ST-container">
                            <h1><b>My Portfolio</b></h1>
                            <div class="ST-section ST-bottombar ST-padding-8"></div>
                        </div>
                    </header>

                    <!-- First Photo Grid-->
                    <div class="ST-container">
                        @if (ViewBag.Products != null && ViewBag.Products.Count>0)
                        {
                            foreach (var item in ViewBag.Products)
                            {
                                <div class="responsive ST-animate-zoom ">
                                    <div class="gallery ST-card ST-round" >
                                        <img src="/GALLERY/@(item.Photo)" alt="@item.Name" width="600" height="400" onclick="onClick(this)">
                                        <div class="desc" style="height:80px">
                                            Descriptions <span style="color:red">@item.Description</span>
                                        </div>
                                    </div>
                                </div>
                            }
                        }

                    </div>


                    <h1><b>How much I charge</b></h1>
                    <div class="ST-section ST-bottombar ST-padding-10"></div>
                    <!-- Pricing Tables -->
                    <div class="ST-row-padding ST-round" style="margin:0 -16px" id="packages">
                        <div class="ST-third ST-margin-bottom">
                            <ul class="ST-ul ST-border ST-white ST-center ST-opacity ST-hover-opacity-off">
                                <li class="ST-black ST-xlarge ST-padding-32">@Model.PackageTitle</li>
                                <li class="ST-padding-16">@Model.AboutPackage</li>

                                <li class="ST-padding-16">
                                    <h2>$ @Model.PackagePrice</h2>
                                    <span class="ST-opacity">per hour</span>
                                </li>
                                @*<li class="ST-light-grey ST-padding-24">
                                        <button class="ST-button ST-round ST-blue ST-padding-large ST-hover-black">Grab It</button>
                                    </li>*@
                            </ul>
                        </div>
                    </div>
                    <!-- Calendar -->
                    <div class="ST-section ST-bottombar ST-padding-10"></div>
                    @*<div class="ST-container ST-padding-large ST-blue ST-left" style="width:40%">
                        <h4 id="contact"><b>Calendar</b></h4>

                        <hr class="ST-opacity">

                    </div>*@


                </div>
                <!-- End Right Column -->

            </div>

            <!-- End Grid -->
        </div>

        <!-- End Page Container -->
    </div>
</section>
<div class="modal" id="divSuccess">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
                <h4 class="modal-title">User Entry</h4>
            </div>
            <div class="modal-body">
                <p id="pMessage"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success pull-right " data-dismiss="modal" onclick="window.location='/User/List'">Ok</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<div id="modal010" class="ST-modal" onclick="this.style.display='none'">
    <span class="ST-white ST-button ST-round ST-hover-red ST-xlarge ST-display-topright">&times;</span>
    <div class="ST-modal-content ST-animate-zoomimg ST-round">
        <img id="img01" style="width:100%">
    </div>
</div>
@section scripts{
    <script src="~/wwwroot/mine/js/User.js"></script>
    <script>
        setValidationRule();
    </script>
    <script>
        function onClick(element) {
            document.getElementById("img01").src = element.src;
            document.getElementById("modal010").style.display = "block";
        }
    </script>
}
