@model List<PHOTOLIO.ViewModel.ContactUsVM>
@{
    ViewBag.Title = "ContactUs List";
    ViewBag.SubTitle = "Search, Edit and Delete";
}

<body> 

    <div class="container-fluid1">
        <div class="col-lg-12 col-md-12 col-sm-12">
            <div class="dotted3 os-animation" data-os-animation="bounceInLeft" data-os-animation-delay="1s" style="margin-bottom:50px;"></div>
            <div class="special">
                <h2 class="os-animation" data-os-animation="bounceInDown" data-os-animation-delay="0.50s" style="margin-bottom:50px;">Contact list</h2>
                <div class="dotted4 os-animation" data-os-animation="bounceInRight" data-os-animation-delay="1s" style="margin-bottom:50px;"></div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <form id="frmContactUs">
                  
                    <div class="box-body">
                        <table id="tblContactUs" class="table table-bordered table-hover dataTable" role="grid" aria-describedby="example2_info">
                            <thead>
                                <tr style="background-color:dodgerblue; color:white; font-family:Lobster Two;font-size: 20px;font-weight: 700;">
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Message</th>
                                    @*<th>Edit</th>*@
                                    <th>Delete</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr style="color:black">
                                        <td>@item.Name</td>
                                        <td>@item.Email</td>
                                        <td>@item.Message</td>
                                        @*<td align="center" valign="middle"><a href="/ContactUs/Edit?id=@item.Id" class="btn btn-success">Edit</a></td>*@
                                        <td align="center" valign="middle"><a class="btn btn-danger" data-toggle="modal" onclick="setRemoveData('@item.Id', '@item.Version')" data-target="#divConfirm">Delete</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="modal fade" id="divConfirm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <center>
                        <img src="~/wwwroot/dist/images/PhotolioCircleicon.ico" style="width:50px;height:50px" />
                        <h4 class="modal-title">Contact List</h4>
                    </center>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    @*<h4 class="modal-title" id="myModalLabel">ContactUs List</h4>*@
                </div>
                <div class="modal-body">
                    <p>Are you sure to delete this message ?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="ST-button ST-round ST-blue " data-dismiss="modal">No</button>
                    <button type="button" class="ST-button ST-round ST-red " data-dismiss="modal" onclick="remove()">Yes</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal" id="divSuccess" style="margin-top:80px;">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <center>
                        <img src="~/wwwroot/dist/images/PhotolioCircleicon.ico" style="width:50px;height:50px" />
                        <h4 class="modal-title">Contact Us</h4>
                    </center>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                    
                </div>
                <div class="modal-body">
                    <p id="pMessage"></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="ST-button ST-round ST-blue " data-dismiss="modal" onclick="window.location = '/ContactUs/List';">OK</button>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
    </body>
@*</html>*@
    @section scripts{

        <script src="~/wwwroot/mine/js/ContactUs.js"></script>
        <script>
            $("#tblContactUs").DataTable();
        </script>
    }

