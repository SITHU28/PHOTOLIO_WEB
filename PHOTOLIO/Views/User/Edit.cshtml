@model PHOTOLIO.ViewModel.UserVM

@{
    ViewBag.Title = "User Edit Form";
}
@{
    var currentUser = (PHOTOLIO.ViewModel.UserVM)Session["CurrentUser"];
}
<body>

    <!-- Page Container -->
    <section class="editsection">

        <div class="ST-content " style="max-width:1300px; margin-top:55px;margin-bottom:50px;">

            <!-- The Grid -->
            <div class="ST-row-padding">

                <!-- Left Column -->

                <div class="ST-third">

                    <div class="ST-white ST-text-grey ST-card-4">
                        <div class="ST-display-container">
                            <!-- form start -->
                            <form class="form-horizontal" id="frmUser">
                                <div class="box-body">
                                    <input type="hidden" id="hidId" value="@Model.Id" />
                                    <input type="hidden" id="hidVersion" value="@Model.Version" />
                                    <div class="ST-display-container">
                                        <center>
                                            <img id="ProfilePrev" src="/UserProfiles/@(Model.Profile)" style="width:100%; height:300px; padding:5px;" alt="Profile" onclick="onClick(this)" />
                                        </center>
                                        
                                        <div class="ST-display-bottomleft ST-container ST-text-black ST-galleryfont ST-opacity-min" style="width:100%">
                                            <h2>@Model.Name</h2>
                                            <button type="button" id="custom-button" class="ST-button"><i class="fa fa-camera"></i></button>

                                            <input style=" margin-top:10px; display:none;" type="file" id="selProfile" name="selProfile" accept="image/*" onchange="ShowPreview(this)" value="/UserProfiles/profile.jpg" required>

                                        </div>
                                    </div>
                                    <div class="ST-container" style="margin-top:10px;">

                                        <br />
                                        <label for="txtUserName" class=" control-label">Name</label>
                                        <input type="text" class="form-control" id="txtUserName" name="txtUserName" value="@Model.Name" placeholder="Name">
                                        <label for="txtEmail" class=" control-label">Email</label>
                                        <input type="email" class="form-control" id="txtEmail" name="txtEmail" value="@Model.Email" placeholder="Email">
                                        <label for="txtUserPassword" class=" control-label">Password</label>
                                        <input type="text" class="form-control" id="txtUserPassword" name="txtUserPassword" value="@Model.Password" placeholder="Password">
                                        <label for="txtBIO" class=" control-label">Your Bio</label>
                                        <textarea type="text" class="form-control" id="txtBIO" name="txtBIO" placeholder="Your Bio">@Model.UserBio</textarea>
                                        <label for="txtPhoneNo" class="control-label">Phone No.</label>
                                        <input type="tel" class="form-control" id="txtPhoneNo" name="txtPhoneNo" value="@Model.PhoneNo" placeholder="Phone No.">
                                        <label for="txtFullAddress" class=" control-label">Full Address</label>
                                        <textarea class="form-control" rows="3" id="txtFullAddress" name="txtFullAddress" placeholder="Full Address ...">@Model.FullAddress</textarea>
                                        <p class="ST-large"><b><i class="fa fa-asterisk fa-fw ST-margin-right ST-text-blue"></i>Skills</b></p>
                                        <p>Adobe Photoshop</p>
                                        <div class="ST-light-grey ST-round-xlarge ST-small">
                                            <div class="ST-container ST-center ST-round-xlarge ST-blue" style="width:@Model.Photoshop%">@Model.Photoshop %</div>
                                            <input type="text" class="form-control" id="Photoshop" name="Photoshop" value="@Model.Photoshop" placeholder="Photoshop">
                                        </div>
                                        <p>Photography</p>
                                        <div class="ST-light-grey ST-round-xlarge ST-small">
                                            <div class="ST-container ST-center ST-round-xlarge ST-blue" style="width:@Model.Photography%">@Model.Photography %</div>
                                            <input type="text" @*onfocus="this.value=''"*@ class="form-control" id="Photography" name="Photography" value="@Model.Photography" placeholder="Photoshop">
                                        </div>
                                        <p>Illustrator</p>
                                        <div class="ST-light-grey ST-round-xlarge ST-small">
                                            <div class="ST-container ST-center ST-round-xlarge ST-blue" style="width:@Model.Illustrator%">@Model.Illustrator %</div>
                                            <input type="text" class="form-control" id="Illustrator" name="Illustrator" value="@Model.Illustrator" placeholder="Illustrator">
                                        </div>
                                        <p>Media</p>
                                        <div class="ST-light-grey ST-round-xlarge ST-small">
                                            <div class="ST-container ST-center ST-round-xlarge ST-blue" style="width:@Model.Media%">@Model.Media %</div>
                                            <input type="text" class="form-control" id="Media" name="Media" value="@Model.Media" placeholder="Media">
                                        </div>
                                        <p>Adobe PremierePro CC </p>
                                        <div class="ST-light-grey ST-round-xlarge ST-small">
                                            <div class="ST-container ST-center ST-round-xlarge ST-blue" style="width:@Model.PremierePro%">@Model.PremierePro %</div>
                                            <input type="text" class="form-control" id="PremierePro" name="PremierePro" value="@Model.PremierePro" placeholder="PremierePro">
                                        </div>
                                        <p>Adobe Lightroom CC </p>
                                        <div class="ST-light-grey ST-round-xlarge ST-small">
                                            <div class="ST-container ST-center ST-round-xlarge ST-blue" style="width:@Model.Lightroom%">@Model.Lightroom %</div>
                                            <input type="text" class="form-control" id="Lightroom" name="Lightroom" value="@Model.Lightroom" placeholder="Lightroom">
                                        </div>
                                        <br>

                                        <p class="ST-large ST-text-theme"><b><i class="fa fa-globe fa-fw ST-margin-right ST-text-blue"></i>Languages</b></p>
                                        <p>Burmese</p>
                                        <div class="ST-light-grey ST-round-xlarge">
                                            <div class="ST-container ST-center ST-round-xlarge ST-blue" style="height:24px;width:@Model.Burmese%">@Model.Burmese %</div>
                                            <input type="text" class="form-control" id="Burmese" name="Burmese" value="@Model.Burmese" placeholder="Burmese">
                                        </div>
                                        <p>English</p>
                                        <div class="ST-light-grey ST-round-xlarge">
                                            <div class="ST-container ST-center ST-round-xlarge ST-blue" style="height:24px;width:@Model.English%">@Model.English %</div>
                                            <input type="text" class="form-control" id="English" name="English" value="@Model.English" placeholder="English">
                                        </div>
                                        <p>Chinese</p>
                                        <div class="ST-light-grey ST-round-xlarge">
                                            <div class="ST-container ST-center ST-round-xlarge ST-blue" style="height:24px;width:@Model.Chinese%">@Model.Chinese %</div>
                                            <input type="text" class="form-control" id="Chinese" name="Chinese" value="@Model.Chinese" placeholder="Chinese">
                                        </div>
                                        <br>
                                        <p class="ST-large ST-text-theme"><b><i class="fa fa-briefcase fa-fw ST-margin-right ST-text-blue"></i>Packages</b></p>
                                        <label for="PackageTitle" class=" control-label">Package Title</label>
                                        <input type="text" class="form-control" id="PackageTitle" name="PackageTitle" value="@Model.PackageTitle" placeholder="PackageTitle">
                                        <label for="AboutPackage" class=" control-label">About Package</label>
                                        <textarea class="form-control" id="AboutPackage" name="AboutPackage" placeholder="AboutPackage">@Model.AboutPackage</textarea>
                                        <label for="PackagePrice" class=" control-label">Package Price</label>
                                        <input type="text" class="form-control" id="PackagePrice" name="PackagePrice" value="@Model.PackagePrice" placeholder="PackagePrice">

                                        <div class="box-header with-border" style="margin-bottom:15px;margin-top:15px; float:right">
                                            <button type="button" style="margin-right:15px" class="ST-button ST-round ST-blue " onclick="update()">Update</button>
                                            @if (currentUser.PositionId == 1) //Admin
                                            {
                                                <button type="button" class=" ST-button ST-round ST-light-gray" onclick="window.location='/User/List'">Cancel</button>
                                            }
                                            else if (currentUser.PositionId != 1)
                                            {
                                                <button type="button" class="ST-button ST-round ST-light-gray" onclick="window.location='/Home/Index'">Cancel</button>
                                            }
                                        </div>
                                    </div>
                                </div>

                                <!-- /.box-body -->
                            </form>
                        </div><br>
                    </div>
                </div>
                <!-- End Left Column -->
                <!-- Right Column (User Bio)-->
                <div class="ST-twothird">
                    <div class="ST-container ST-card ST-white ST-margin-bottom">
                        <h2 class="ST-text-grey ST-padding-16"><i class="fa fa-user fa-fw ST-margin-right ST-xxlarge ST-text-blue"></i>My Bio</h2>
                        <p>@Model.UserBio</p>
                    </div>


                    <!------Portfolio Side-->
                    <div class="ST-container ST-card ST-white ">
                        <!-- Header -->
                        <header id="portfolio">
                            <div class="ST-container">
                                <h1><b>My Portfolio</b></h1>
                                <div class="ST-section ST-bottombar ST-padding-16">
                                    @*<button class="ST-button ST-black">ALL</button>
                                        <button class="ST-button ST-white"><i class="fa fa-diamond ST-margin-right"></i>Portraits</button>
                                        <button class="ST-button ST-white ST-hide-small"><i class="fa fa-photo ST-margin-right"></i>Landscepes</button>
                                        <button class="ST-button ST-white ST-hide-small"><i class="fa fa-file-photo-o ST-margin-right"></i>Othres</button>*@
                                </div>
                                <a href="/Product/Entry" class="ST-button ST-blue ST-round" style="margin-bottom:10px;"><i class="fa fa-camera"></i> <span>UPLOAD PHOTO</span></a>
                                @*<button class="ST-button ST-blue ST-round" style="margin-bottom:10px;"><i class="fa fa-plus"></i> ADD PHOTO</button>*@
                            </div>
                        </header>

                        <!-- My Portfolio-->
                        <div class="ST-container">
                            @if (ViewBag.Products != null && ViewBag.Products.Count > 0)
                            {
                                foreach (var item in ViewBag.Products)
                                {
                                    <div class="responsive ST-animate-zoom ">
                                        <div class="gallery ST-card ST-round">
                                            <img src="/GALLERY/@(item.Photo)" alt="@item.Name" width="600" height="400" onclick="onClick(this)">
                                            <div class="desc" style="height:80px">
                                                Descriptions <span style="color:red">@item.Description</span>
                                            </div>
                                            @*<a href="/Product/Edit?id=@item.Id" class="ST-button ST-green ST-hover-gray ST-round">Edit</a>
                                                <a class="ST-button ST-red ST-hover-gray ST-round" data-toggle="modal" data-target="#divConfirm" onclick="setRemoveData('@item.Id','@item.Version')"> Delete</a>*@
                                        </div>
                                    </div>
                                }
                            }
                        </div>


                        <h1><b>How much I charge</b></h1>
                        <div class="ST-section ST-bottombar ST-padding-10"></div>
                        <!-- Pricing Tables -->
                        <div class="ST-row-padding ST-round" style="margin:0 -16px" id="packages">
                            @*<div class="ST-container" style="margin-bottom:10px;">
                                    <button class="ST-button ST-round ST-blue ST-padding-large ST-hover-black "><i class="fa fa-plus"></i> ADD Package</button>
                                </div>*@

                            <div class="ST-third ST-margin-bottom">
                                <ul class="ST-ul ST-border ST-white ST-center ST-opacity ST-hover-opacity-off">
                                    <li class="ST-black ST-xlarge ST-padding-32">@Model.PackageTitle</li>
                                    <li class="ST-padding-16">@Model.AboutPackage</li>

                                    <li class="ST-padding-16">
                                        <h2>$ @Model.PackagePrice</h2>
                                        <span class="ST-opacity">per hour</span>
                                    </li>
                                    @*<li class="ST-light-grey ST-padding-24">
                                            <button class="ST-button ST-round ST-blue ST-padding-large ST-hover-black">Grab It</button>
                                        </li>*@
                                </ul>
                            </div>
                        </div>
                        <!-- Calendar -->
                        <div class="ST-section ST-bottombar ST-padding-10"></div>
                        @*<div class="ST-container ST-padding-large ST-blue ST-left" style="width:40%">
                                <h4 id="contact"><b>Calendar</b></h4>

                                <hr class="ST-opacity">

                            </div>*@
                        <!-- Contact Section -->


                    </div>
                    <!-- End Right Column -->

                </div>
                <!-- End Grid -->
            </div>

            <!-- End Page Container -->
        </div>

    </section>

    <!-------------------------------------------------------------------------------------Message Box------------->
    <div class="modal" id="divSuccess" style="margin-top:80px;">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <center>
                        <img src="/wwwroot/dist/images/PhotolioLogo Circle.jpg" style="width:50px;height:50px" />
                        <h4 class="modal-title">Edit User </h4>
                    </center>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p id="pMessage"></p>
                </div>
                <div class="modal-footer">
                    @if (currentUser.PositionId != 1) //User
                    {
                        <button type="button" class="ST-button ST-round ST-blue  " data-dismiss="modal" onclick="window.location='/User/Edit?Id=@currentUser.Id'">Ok</button>
                    }
                    else if (currentUser.PositionId == 1) //Admin
                    {
                        <button type="button" class="ST-button ST-round ST-blue  " data-dismiss="modal" onclick="window.location='/User/List'">Ok</button>
                    }

                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
</body>

<div id="modal010" class="ST-modal" onclick="this.style.display='none'">
    <span class="ST-white ST-button ST-round ST-hover-red ST-xlarge ST-display-topright">&times;</span>
    <div class="ST-modal-content ST-animate-zoomimg ST-round">
        <img id="img01" style="width:100%">
    </div>
</div>
<script>
    function onClick(element) {
        document.getElementById("img01").src = element.src;
        document.getElementById("modal010").style.display = "block";
    }
</script>
@section scripts{
    <script src="~/wwwroot/mine/js/User.js"></script>
    <script>
        setValidationRule();
    </script>

}
