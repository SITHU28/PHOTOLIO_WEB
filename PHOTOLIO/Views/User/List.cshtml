@model List<PHOTOLIO.ViewModel.UserVM>
@{
    ViewBag.Title = "User List (Admin)";
}

<body>
    <section class="editsection">
        <div class="container-fluid1">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="dotted3 os-animation" data-os-animation="bounceInLeft" data-os-animation-delay="1s" style="margin-bottom:50px;"></div>
                <div class="special">
                    <h2 class="os-animation" data-os-animation="bounceInDown" data-os-animation-delay="0.50s" style="margin-bottom:50px;">User list</h2>
                    <div class="dotted4 os-animation" data-os-animation="bounceInRight" data-os-animation-delay="1s" style="margin-bottom:50px;"></div>
                </div>
            </div>

            <div class="row">
                    <!-- form start -->
                    <form id="frmUser" class="form-horizontal">
                        <div class="ST-container">
                            <div class="box-header with-border">
                                    @*<button type="button" class="ST-button ST-round ST-large ST-green ST-hover-gray" onclick="window.location = '/User/Entry'" style="margin-bottom:10px;">Add <i class="fa fa-user-plus"></i> </button>*@
                            </div>
                            <div class="box-body">
                                <table id="tblUser" class="table table-bordered table-hover dataTable" role="grid" aria-describedby="example2-info">
                                    <thead>
                                        <tr style="background-color:dodgerblue; color:white; font-weight:bold;">
                                            <th>Profile</th>
                                            <th>Name</th>
                                            <th>Email</th>
                                            <th>Password</th>
                                            <th>Your Bio</th>
                                            <th>Full Address</th>
                                            <th>Phone No</th>
                                            <th>Edit</th>
                                            <th>Delete</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                        <tr style="color:black">
                                            <td>
                                                <img src="data:image;base64,@System.Convert.ToBase64String(item.Profile)" width="120" height="80" />
                                            </td>
                                            <td>@item.Name</td>
                                            <td>@item.Email</td>
                                            <td>@item.Password</td>
                                            <td>@item.UserBio</td>
                                            <td>@item.FullAddress</td>
                                            <td>@item.PhoneNo</td>
                                            <th><a href="/User/Edit?id=@item.Id" class="btn btn-success ST-hover-gray">Edit</a></th>
                                            <th><a class="btn btn-danger ST-hover-gray" data-toggle="modal" data-target="#divConfirm" onclick="setRemoveData('@item.Id','@item.Version')"> Delete</a></th>
                                        </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </form>
            </div>

        </div>
    </section>

    @*<div class="modal fade" id="divConfirm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">User List</h4>
                </div>
                <div class="modal-body">
                    <p>Are you sure to delete?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">No</button>
                    <button type="button" class="btn btn-success" onclick="remove()">Yes</button>
                </div>
            </div>
        </div>
    </div>*@

    <div class="modal fade" id="divConfirm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" style="margin-top:80px;">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <center>
                        <img src="~/wwwroot/dist/images/PhotolioCircleicon.ico" style="width:50px;height:50px" />
                        <h4 class="modal-title" id="myModalLabel">User List</h4>
                    </center>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    
                </div>
                <div class="modal-body">
                    <p>Are you sure to delete?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="ST-button ST-round ST-blue"  data-dismiss="modal">Cancel</button>
                    <button type="button" class="ST-button ST-round ST-red" data-dismiss="modal" onclick="userremove()">Delete</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal" id="divSuccess" style="margin-top:80px;">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <center>
                        <img src="~/wwwroot/dist/images/PhotolioCircleicon.ico" style="width:50px;height:50px" />
                        <h4 class="modal-title">User List</h4>
                    </center>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                    
                </div>
                <div class="modal-body">
                    <p id="pMessage"></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="ST-button ST-round ST-blue" data-dismiss="modal" onclick="window.location='/User/List'">Ok</button>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>


</body>


@section scripts{
    <script src="~/wwroot/mine/js/User.js"></script>
    <script src="~/wwwroot/mine/js/LogIn.js"></script>
    <script>
        $("#tblUser").DataTable();
    </script>
}            

