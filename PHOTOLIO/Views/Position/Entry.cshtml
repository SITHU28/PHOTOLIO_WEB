<body>

    <section class="editsection" style="min-height:500px;">
        <div class="container" style="margin-top:200px;">

            <div class="row">
                <div class="row-md-12">
                    <div class="box box-success">
                        <!-- form start -->
                        <form class="form-horizontal" id="frmPosition">
                            <center>
                                <img src="~/wwwroot/dist/images/PhotolioCircleicon.ico" style="width:80px;height:80px" />

                            </center>
                            <div class="box-header with-border">
                                <div class="pull-right">
                                    <button type="button" class="ST-button ST-round ST-blue" onclick="save()">Save</button>
                                    <button type="button" class="ST-button ST-round ST-light-gray" onclick="window.location = '/Position/List'">Cancel</button>
                                </div>
                            </div>
                            <br />
                            <br />
                            <br />

                            <div class="box-body">
                                <div class="row">
                                    <div class="col-md-6 col-md-offset-3">

                                        <div class="form-group">
                                            <label for="txtName" class="col-sm-3 control-label">Position Name</label>
                                            <div class="col-sm-9">
                                                <input type="text" class="form-control" id="txtName" name="txtName" placeholder="Enter Position Name">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <div class="modal" id="divSuccess" style="margin-top:80px;">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <center>
                        <img src="~/wwwroot/dist/images/PhotolioCircleicon.ico" style="width:50px;height:50px" />
                        <h4 class="modal-title">Add Position</h4>
                    </center>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p id="pMessage"></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="ST-button ST-round ST-blue" data-dismiss="modal" onclick="window.location = '/Position/List'">Ok</button>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
</body>

