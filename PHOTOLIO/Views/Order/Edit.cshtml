<div class="row">
    <div class="col-md-12">
        <div class="box box-success">
            <form class="form-horizontal" id="frmOrder">
                <input type="hidden" id="hidId" value="@Model.Id" />
                <input type="hidden" id="hidVersion" value="@Model.Version" />
                <div class="box-header with-border">
                    <div class="btn-group pull-right">
                        <button type="button" class="btn btn-success" onclick="update()">Update</button>
                        <button type="button" class="btn btn-default" onclick="window.location = '/Order/List';">Cancel</button>
                    </div>

                </div>
                <div class="box-body">
                    <div class="row">
                        <div class="col-md-6 col-md-offset-3">

                            <div class="form-group">
                                <label for="txtProductId" class="col-md-2 control-label">ProductId</label>

                                <div class="col-md-10">
                                    <input type="hidden" id="hiProductId" value="@Model.Product.Id">
                                    <input type="text" class="form-control" id="txtProductId" name="txtProductId" placeholder="ProductId" value="@Model.Product.Name">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="txtPrice" class="col-md-2 control-label">Price</label>

                                <div class="col-md-10">
                                    <input type="text" class="form-control" id="txtPrice" name="txtPrice" placeholder="txtPrice" value="@Model.Product.Price">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="txtDate" class="col-md-2 control-label">Date</label>
                                <div class="col-md-10">
                                    <input type="text" class="form-control" id="txtDate" name="txtDate" value="@Model.Date" placeholder="Date">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="txtQuantity" class="col-md-2 control-label">Quantity</label>
                                <div class="col-md-10">
                                    <input type="number" class="form-control" id="txtQuantity" name="txtQuantity" value="@Model.Quantity" placeholder="Quantity" onchange="totalprice()">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="txtTotalPrice" class="col-md-2 control-label">TotalPrice</label>
                                <div class="col-md-10">
                                    <input type="text" class="form-control" id="txtTotalPrice" name="txtTotalPrice" value="@Model.TotalPrice" placeholder="TotalPrice">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="txtAddress" class="col-md-2 control-label">Address</label>

                                <div class="col-md-10">
                                    <input type="text" class="form-control" id="txtAddress" name="txtAddress" placeholder="txtAddress" value="@Model.Address">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="txtTownship" class="col-md-2 control-label">Township</label>

                                <div class="col-md-10">
                                    <input type="text" class="form-control" id="txtTownship" name="txtTownship" placeholder="txtTownship" value="@Model.Township">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>





<div class="modal" id="divSuccess" style="margin-top:80px;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <center>
                    <img src="~/wwwroot/dist/images/PhotolioCircleicon.ico" style="width:50px;height:50px" />
                    <h4 class="modal-title">Edit Order</h4>
                </center>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
               
            </div>
            <div class="modal-body">
                <p id="pMessage"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="ST-button ST-round ST-blue" data-dismiss="modal" onclick="window.location = '/Order/List?productId=@Model.Product.Id';">OK</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>

@section scripts{
<script src="~/wwwroot/mine/js/Order.js"></script>
    <script>
        setValidationRule();
        $('#txtDate').datetimepicker({
            format: "YYYY-MM-DD",
            allowInputToggle: true,
            showClose: true,
            showTodayButton: true,
        });
    </script>
}