@model PHOTOLIO.ViewModel.ContactUsVM

@{
    ViewBag.Title = "ContactUs Edit";
    ViewBag.SubTitle = "";
}

<div class="container-fluid1">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="special">
            <h2 class="os-animation" data-os-animation="bounceInDown" data-os-animation-delay="0.50s" style="margin-bottom:50px;">EDIT List</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="box box-success">
                <form class="form-horizontal" id="frmContactUs">
                    <div class="box-header with-border">
                        <div class="btn-group pull-right">
                            <button type="button" class="btn btn-success" onclick="update()">Update</button>
                            <button type="button" class="btn btn-default" onclick="window.location = '/ContactUs/List';">Cancel</button>
                        </div>
                    </div>
                    <div class="box-body">
                        <div class="row">
                            <div class="col-md-6 col-md-offset-3">

                                <div class="form-group">
                                    <label for="txtName" class="col-md-2 control-label">Name</label>
                                    <div class="col-md-10">
                                        <input type="hidden" id="hidId" value="@Model.Id" />
                                        <input type="hidden" id="hidVersion" value="@Model.Version" />
                                        <input type="text" class="form-control" id="txtName" name="txtName" value="@Model.Name" placeholder="Name">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label for="txtEmail" class="col-md-2 control-label">Email</label>
                                    <div class="col-md-10">
                                        <input type="text" class="form-control" id="txtEmail" name="txtEmail" value="@Model.Email" placeholder="Email">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label for="txtMessage" class="col-md-2 control-label">Message</label>
                                    <div class="col-md-10">
                                        <textarea class="form-control" id="txtMessage" name="txtMessage" placeholder ="Message">@Model.Message</textarea>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    </div>

    <div class="modal" id="divSuccess" style="margin-top:80px;">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <center>
                        <img src="~/wwwroot/dist/images/PhotolioCircleicon.ico" style="width:50px;height:50px" />
                        <h4 class="modal-title">Contact Us</h4>
                    </center>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p id="pMessage"></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="ST-button ST-round ST-blue " data-dismiss="modal" onclick="window.location = '/ContactUs/List';">OK</button>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>

@section scripts{
    <script src="~/wwwroot/mine/js/ContactUs.js"></script>
    <script>
            setValidationRule();
    </script>
}   
