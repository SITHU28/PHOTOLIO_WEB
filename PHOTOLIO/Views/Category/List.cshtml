@model List<PHOTOLIO.ViewModel.CategoryVM>
@{
    ViewBag.Title = "Category List (Admin)";
}
<section class="editsection">
    <div class="container" style="margin-top:100px;">

        <div class="row">
            <div class="col-md-12">
                <div class="box box-success">
                    <!-- form start -->
                    <form class="form-horizontal" id="frmCategory">
                        <div class="box-header with-border">
                            <button type="button" class="btn btn-success" onclick="window.location = '/Category/Entry'" style="margin-bottom:10px;">Add</button>
                        </div>
                        <div class="box-body">
                            <table id="tblCategory" class="table table-bordered table-hover dataTable" role="grid" aria-describedby="example2-info">
                                <thead>
                                    <tr style="background-color:dodgerblue; color:white; font-weight:bold;">
                                        <th>Name</th>
                                        <th>Edit</th>
                                        <th>Delete</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.Name</td>
                                            <th><a href="/Category/Edit?id=@item.Id" class="btn btn-success">Edit</a></th>
                                            <th><a class="btn btn-danger" data-toggle="modal" data-target="#divConfirm" onclick="setRemoveData('@item.Id','@item.Version')"> Delete</a></th>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

<div class="modal fade" id="divConfirm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" style="margin-top:80px;">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <center>
                    <img src="~/wwwroot/dist/images/PhotolioCircleicon.ico" style="width:50px;height:50px" />
                    <h4 class="modal-title" id="myModalLabel">Category List</h4>
                </center>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
               
            </div>
            <div class="modal-body">
                <p>Are you sure to delete?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="ST-button ST-round ST-blue" data-dismiss="modal">No</button>
                <button type="button" class="ST-button ST-round ST-red " onclick="removecat()">Yes</button>
            </div>
        </div>
    </div>
</div>

<div class="modal" id="divSuccess" style="margin-top:80px;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <center>
                    <img src="~/wwwroot/dist/images/PhotolioCircleicon.ico" style="width:50px;height:50px" />
                    <h4 class="modal-title">Category List</h4>
                </center>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <p id="pMessage"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="ST-button ST-round ST-blue " data-dismiss="modal" onclick="window.location = '/Category/List'">Ok</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>

@section scripts{
    <script src="~/wwwroot/mine/js/Category.js"></script>
    <script>
        $("#tblCategory").DataTable();
    </script>
}

